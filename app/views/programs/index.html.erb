<h1>Listing All</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.name %></td>
        <td><%=h truncate(program.desc, :length => 80) %></td>
        <% if admin_signed_in? %>
          <td><%= link_to "Show", program_path(program) %></td>
          <td><%= link_to "Edit", edit_program_path(program) %></td>
          <td><%= link_to "Destroy", program, method: :delete, data: { confirm: "Are you sure?"} %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Program", new_program_path %>
