<div class="row">
<% @program.days.each do |day| %>
  <div class="col-md-3 col-lg-3 col-sm-6" id="day_<%= day.id %>">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <p>Day :<%= day.day_number %></p>
      </div>
      <div class="panel-body">
        <p><%= day.info %></p>
      </div>
      <div class="panel-footer">
        <div class="btn btn-group">
          <%= link_to "Show", [day.program, day], class: "btn btn-success" %>
      <% if admin_signed_in? %>
          <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#updateday" >Edit</button>
          <%= link_to "Destroy", [day.program, day], method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
      <% end %> 
        </div>
      </div>
    </div>
    </div>
  <% end %>
</div>

<%= form_for([@program, @program.days.build]) do |f| %>
<div class="modal fade" id="#updateday" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Day</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :day_number %>
          <%= f.text_field :day_number, class: "form-control" %>
        </div> 
        <div class="form-group">
          <%= f.label :info %>
          <%= f.text_area :info, class: "form-control" %>
        </div>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Update", class: "btn btn-primary" %>
      </div>        
      </div>
    </div>
  </div>
</div>
<% end %>